<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="CommunitiesFrame.lua"/>

	<CheckButton name="CommunitiesFrameTabTemplate" virtual="true">
		<Size x="32" y="32"/>
		<Layers>
			<Layer level="BORDER">
				<Texture file="Interface\SpellBook\SpellBook-SkillLineTab">
					<Size x="64" y="64"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="-3" y="11"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon" setAllPoints="true" file="INTERFACE\HELPFRAME\REPORTLAGICON-CHAT">
					<Size x="32" y="32"/>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnClick>
				self:SetChecked(true);
			</OnClick>
		</Scripts>
		<NormalTexture/>
		<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
		<CheckedTexture file="Interface\Buttons\CheckButtonHilight" alphaMode="ADD"/>
	</CheckButton>
	
	<Frame name="CommunitiesFrame" toplevel="true" parent="UIParent" movable="true" enableMouse="true" hidden="true" inherits="ButtonFrameTemplate" mixin="CommunitiesFrameMixin">
		<Size x="814" y="426"/>
		<Layers>
			<Layer level="ARTWORK">
				<MaskTexture parentKey="CircleMask" file="Interface\CharacterFrame\TempPortraitAlphaMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.portrait"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.portrait"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="portrait"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="PortraitOverlay" setAllPoints="true">
				<Layers>
					<Layer level="OVERLAY" textureSubLevel="-1">
						<Texture parentKey="Portrait">
							<Size x="61" y="61"/>
							<Anchors>
								<Anchor point="TOPLEFT" x="-6" y="8" />
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<Texture inherits="UI-Frame-Portrait" parentKey="PortraitFrame">
							<Anchors>
								<Anchor point="TOPLEFT" x="-14" y="11"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="ARTWORK">
						<MaskTexture parentKey="CircleMask" file="Interface\CharacterFrame\TempPortraitAlphaMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.Portrait"/>
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Portrait"/>
							</Anchors>
							<MaskedTextures>
								<MaskedTexture childKey="Portrait"/>
							</MaskedTextures>
						</MaskTexture>
					</Layer>
				</Layers>
			</Frame>
			<Frame parentKey="MaximizeMinimizeFrame" inherits="MaximizeMinimizeButtonFrameTemplate">
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.CloseButton" relativePoint="LEFT" x="10" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture atlas="UI-OuterBorderButtonPatch" useAtlasSize="true">
							<Anchors>
								<Anchor point="CENTER" relativePoint="LEFT" x="6" y="0"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad function="CommunitiesFrameMaximizeMinimizeButton_OnLoad"/>
				</Scripts>
			</Frame>
			<Frame parentKey="CommunitiesList" inherits="CommunitiesListFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="-23"/>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT" x="170" y="29"/>
				</Anchors>
			</Frame>
			<CheckButton parentKey="ChatTab" hidden="true" inherits="CommunitiesFrameTabTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="0" y="-36"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						-- TODO:: replace the temp icon.
						self.Icon:SetTexture("INTERFACE\\HELPFRAME\\REPORTLAGICON-CHAT");
					</OnLoad>
					<OnClick inherits="append">
						self:GetParent():SetDisplayMode(COMMUNITIES_FRAME_DISPLAY_MODES.CHAT);
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton parentKey="RosterTab" hidden="true" inherits="CommunitiesFrameTabTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.ChatTab" relativePoint="BOTTOMLEFT" x="0" y="-20"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						-- TODO:: replace the temp icon.
						self.Icon:SetTexture("INTERFACE\\FRIENDSFRAME\\UI-TOAST-CHATINVITEICON");
					</OnLoad>
					<OnClick inherits="append">
						self:GetParent():SetDisplayMode(COMMUNITIES_FRAME_DISPLAY_MODES.ROSTER);
					</OnClick>
				</Scripts>
			</CheckButton>
			<Frame parentKey="StreamDropDownMenu" inherits="StreamDropDownMenuTemplate">
				<Size x="40" y="28"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="188" y="-32"/>
				</Anchors>
			</Frame>
			<Frame parentKey="CommunitiesListDropDownMenu" inherits="CommunitiesListDropDownMenuTemplate">
				<Size x="40" y="28"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="-12" y="-28"/>
				</Anchors>
			</Frame>
			<Frame parentKey="MemberList" inherits="CommunitiesMemberListFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="-165" y="-63"/>
					<Anchor point="BOTTOMRIGHT" x="-26" y="28"/>
				</Anchors>
			</Frame>
			<Frame parentKey="Chat" inherits="CommunitiesChatTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.CommunitiesList" relativePoint="TOPRIGHT" x="30" y="-46"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.MemberList" relativePoint="BOTTOMLEFT" x="-22" y="28"/>
				</Anchors>
			</Frame>
			<EditBox parentKey="ChatEditBox" frameLevel="1200" inherits="CommunitiesChatEditBoxTemplate">
				<Size x="0" y="32"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.Chat" relativePoint="BOTTOMLEFT" x="-4" y="-6"/>
					<Anchor point="TOPRIGHT" relativeKey="$parent.Chat" relativePoint="BOTTOMRIGHT" x="-8" y="-6"/>
				</Anchors>
			</EditBox>
			<Frame parentKey="InvitationFrame" inherits="CommunitiesInvitationFrameTemplate" hidden="true">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.CommunitiesList" relativePoint="TOPRIGHT" x="24" y="-40"/>
					<Anchor point="BOTTOMRIGHT" x="-12" y="30"/>
				</Anchors>
			</Frame>
			<Frame parentKey="GuildFinderFrame" inherits="CommunitiesGuildFinderFrameTemplate" hidden="true">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.CommunitiesList" relativePoint="TOPRIGHT" x="24" y="-40"/>
					<Anchor point="BOTTOMRIGHT" x="-12" y="30"/>
				</Anchors>
			</Frame>
			<Frame parentKey="EditStreamDialog" frameStrata="DIALOG" inherits="CommunitiesEditStreamDialogTemplate" hidden="true">
				<Size x="320" y="260"/>
				<Anchors>
					<Anchor point="CENTER" relativeTo="UIParent"/>
				</Anchors>
			</Frame>
			<Button parentKey="AddToChatButton" inherits="AddToChatButtonTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeKey="$parent.ChatEditBox" relativePoint="BOTTOMRIGHT" x="10" y="5"/>
					<Anchor point="BOTTOM" x="0" y="5"/>
				</Anchors>
			</Button>
			<Button parentKey="CommunitiesAddButton" inherits="CommunitiesAddButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.CommunitiesList" relativePoint="BOTTOMLEFT" x="1" y="-3"/>
					<Anchor point="TOPRIGHT" relativeKey="$parent.CommunitiesList" relativePoint="BOTTOMRIGHT" x="0" y="-3"/>
					<Anchor point="BOTTOM" x="0" y="5"/>
				</Anchors>
			</Button>
			<Button parentKey="InviteButton" inherits="CommunitiesInviteButtonTemplate">
				<Size x="130" y="20"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="-5" y="5"/>
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnEvent method="OnEvent"/>
			<OnHide method="OnHide"/>
		</Scripts>
	</Frame>
</Ui>