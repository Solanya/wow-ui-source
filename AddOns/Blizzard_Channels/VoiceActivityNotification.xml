<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="VoiceActivityNotification.lua"/>

	<ContainedAlertFrame name="VoiceActivityNotificationBaseTemplate" mixin="VoiceActivityNotificationBaseMixin" hidden="true" virtual="true">
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnEvent method="OnEvent"/>
			<OnClick method="OnClick"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</ContainedAlertFrame>

	<ContainedAlertFrame name="VoiceActivityNotificationTemplate" inherits="VoiceActivityNotificationBaseTemplate" mixin="VoiceActivityNotificationMixin" virtual="true">
		<Size x="120" y="35"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="Portrait">
					<Size x="28" y="28"/>
					<Anchors>
						<Anchor point="LEFT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="PortraitFrame" atlas="voicechat-portrait-ring">
					<Size x="38" y="38"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Portrait"/>
					</Anchors>
				</Texture>
				<Texture parentKey="VoiceSpeaker" atlas="voicechat-icon-speaker">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Portrait" relativePoint="RIGHT" x="2"/>
					</Anchors>
				</Texture>
				<Texture parentKey="VoiceLoudness1" atlas="voicechat-icon-loudnessbar-1">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.VoiceSpeaker" relativePoint="RIGHT" x="-5"/>
					</Anchors>
				</Texture>
				<Texture parentKey="VoiceLoudness2" atlas="voicechat-icon-loudnessbar-2">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.VoiceLoudness1"/>
					</Anchors>
				</Texture>
				<Texture parentKey="VoiceLoudness3" atlas="voicechat-icon-loudnessbar-3">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.VoiceLoudness2"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Name" justifyH="LEFT" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.VoiceLoudness1" relativePoint="RIGHT" x="2"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</ContainedAlertFrame>
</Ui>